<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Brook</PackageId>
    <PackageTags>micro sql helper</PackageTags>
    <Title>Brook</Title>
    <Description>A high performance micro sql helper supporting SQL Server、MySQL</Description>
    <Authors>Eddie</Authors>
   <TargetFrameworks>net451;netstandard2.0</TargetFrameworks>
   <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
   <RootNamespace>jIAnSoft.Framework.Brook</RootNamespace>
   <AssemblyVersion>17.9.30</AssemblyVersion>
   <FileVersion>17.9.30</FileVersion>
   <Version>17.9.30</Version>
   <PackageLicenseUrl>https://github.com/jiansoft/brook/blob/master/LICENSE</PackageLicenseUrl>
   <Copyright>Copyright © jIAnSoft 2017</Copyright>
   <PackageProjectUrl>https://github.com/jiansoft/brook</PackageProjectUrl>
   <RepositoryUrl>https://github.com/jiansoft/brook.git</RepositoryUrl>
   <RepositoryType>git</RepositoryType>
   <Company>jIAnSoft</Company>
   <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
   
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net451|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NET451;NETSTANDARD2_0</DefineConstants>
  </PropertyGroup>
